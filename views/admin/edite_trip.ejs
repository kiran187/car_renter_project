<%-include("navbar.ejs")%>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form action="/admin/submit" method="POST">
                          <div class="row">
                <div class="col-12 text-center">
                    <h5 class="card-title text-center mt-4">Make Your Trip</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted text-center mt-3">Pick Up Location</h6>
                    <input type="hidden" name="make_trip_id" value="<%-old_data.make_trip_id%>">
                    <input type="text" value="<%= old_data.pick_up_location %>" name="location" placeholder="City Airport location" class="form-control text-center">

                    <div class="row mt-3">
                        <div class="col-6">
                            <h6>Pick-up Time</h6>
                            <input type="time" value="<%= old_data.pick_up_time %>" name="pick_up_time" class="form-control text-center">
                        </div>
                        <div class="col-6">
                            <h6>Drop Off Time</h6>
                            <input type="time" value="<%= old_data.drop_off_time %>" name="drop_off_time" class="form-control text-center">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6">
                            <h6 class="card-title text-center mt-4">Pick-up DATE</h6>
                            <input type="date" value="<%= old_data.pick_up_date %>" name="pick_up_date" class="form-control text-center">
                        </div>
                        <div class="col-6">
                            <h6 class="card-title text-center mt-4">Drop Off DATE</h6>
                            <input type="date" value="<%= old_data.drop_off_date %>" name="drop_off_date" class="form-control text-center">
                        </div>
                    </div>

                    <!-- Centering the button using a div with text-center class -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">Rent A Car Now</button>
                    </div>
                </div>
            </div>
           </form>
        </div>
    </div>
</div>


<%-include("footer.ejs")%>